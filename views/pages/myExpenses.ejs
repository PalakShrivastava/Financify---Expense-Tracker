<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title || "Financify" %></title>

  <!-- CSS link-->
  <link rel="stylesheet" href="/css/style.css">
  <!-- Bootstrap link -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <!-- Font Awesome CDN link-->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css">
</head>

<body style="background-color: #e6f4ea;">
  <%- include("../includes/navbar.ejs") %>

  <div class="container mt-4">
    <div class="row justify-content-center">
      <div class="col-lg-6 col-md-8 col-sm-10">
        <div class="card shadow-sm p-3">
          <h3 class="text-center mb-3" style="color: #143016dd;">List of my Expenses</h3>
          <ul class="list-group">
            <% groups.forEach(group => { %>
              <li class="list-group-item d-flex justify-content-between align-items-center">
                <a style="text-decoration: none; color: #143016ab;" href="/my-expenses/<%= group._id %>">
                  <%= group.date.toDateString() %>
                </a>
                <form action="/my-expenses/<%= group._id %>?_method=DELETE" method="POST" class="m-0">
                  <button class="btn btn-danger btn-sm">Delete</button>
                </form>
              </li>
            <% }) %>
          </ul>
        </div>
      </div>
    </div>
  </div>

</body>
</html>
